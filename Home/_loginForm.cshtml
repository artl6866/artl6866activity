@model LoginUser
<h1>Login</h1>
<br>
<br>
<form asp-action="Login" aps-controller="Home" method="post">
    <div class="form-group col-md-6">
        <span asp-validation-for="LoginEmail"></span>
        <label asp-for="LoginEmail">Email</label>
        <input asp-for="LoginEmail" placeholder="Enter Email Address"/>
    </div>
    <div class="form-group col-md-6">
        <span asp-validation-for="LoginPassword"></span>
        <label asp-for="LoginPassword">Password</label>
        <input asp-for="LoginPassword" placeholder="Enter Password"/>
    </div>
    <div>
        <input type="submit" value="Login Now">
    </div>
</form>